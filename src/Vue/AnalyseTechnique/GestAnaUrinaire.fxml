<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AnalyseTechnique.GestAnaUrinaireController">
   <children>
      <!-- En-tête -->
      <VBox alignment="TOP_CENTER" layoutX="20.0" layoutY="20.0" prefWidth="760.0" spacing="10.0">
         <Text fill="#336791" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestion des Analyses Urinaires" />
         <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="searchField" prefWidth="400.0" promptText="Rechercher par ID ou paramètre" />
            <Button mnemonicParsing="false" onAction="#searchAnaUrinaire" text="Rechercher" />
         </HBox>
      </VBox>

      <!-- Table des analyses urinaires -->
      <TableView fx:id="tableanalyseurinaire" layoutX="20.0" layoutY="100.0" prefHeight="300.0" prefWidth="760.0">
         <columns>
            <TableColumn fx:id="colidp" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="coldateA" prefWidth="100.0" text="Date Analyse" />
            <TableColumn fx:id="coldateR" prefWidth="100.0" text="Date Résultat" />
            <TableColumn fx:id="colph" prefWidth="55.20001220703125" text="pH" />
            <TableColumn fx:id="colglucose" prefWidth="104.79998779296875" text="Glucose (mg/dL)" />
            <TableColumn fx:id="colproteines" prefWidth="112.0" text="Protéines (mg/dL)" />
            <TableColumn fx:id="colleucocytes" prefWidth="110.4000244140625" text="Leucocytes (UI/L)" />
            <TableColumn fx:id="colsa" prefWidth="126.40008544921875" text="Présence de Sang" />
         </columns>
      </TableView>

      <!-- Boutons -->
      <HBox alignment="CENTER" layoutX="20.0" layoutY="420.0" prefWidth="760.0" spacing="20.0">
         <Button fx:id="boutonAjou" mnemonicParsing="false" onAction="#ajouterAnaUrinaire" style="-fx-font-size: 14px; -fx-background-color: #336791;" text="Ajouter" textFill="WHITE" />
         <Button fx:id="boutonSupp" mnemonicParsing="false" onAction="#SuppAnaUrinaire" style="-fx-font-size: 14px; -fx-background-color: #336791;" text="Supprimer" textFill="WHITE" />
      </HBox>
      <Button fx:id="back" mnemonicParsing="false" onAction="#handleback" text="⬅" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
   </children>
</AnchorPane>
