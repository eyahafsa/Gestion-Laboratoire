<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AnalyseTechnique.GestAnaSanguineController">
   <children>
      <!-- En-tête -->
      <VBox alignment="TOP_CENTER" layoutX="20.0" layoutY="20.0" prefWidth="760.0" spacing="10.0">
         <Text fill="#336791" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestion des Analyses Sanguines" />
         <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="searchField" prefWidth="400.0" promptText="Rechercher par ID ou type de sang" />
            <Button mnemonicParsing="false" onAction="#searchAnaSanguine" text="Rechercher" />
         </HBox>
      </VBox>

      <!-- Table des analyses -->
      <TableView fx:id="tableanalysesanguine" layoutX="20.0" layoutY="100.0" prefHeight="300.0" prefWidth="760.0">
         <columns>
            <TableColumn fx:id="colidp" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="coldateA" prefWidth="100.0" text="Date Analyse" />
            <TableColumn fx:id="coldateR" prefWidth="100.0" text="Date Résultat" />
            <TableColumn fx:id="coltypeS" prefWidth="80.0" text="Type Sang" />
            <TableColumn fx:id="colgr" prefWidth="80.0" text="Globules Rouges" />
            <TableColumn fx:id="colgb" prefWidth="80.0" text="Globules Blancs" />
            <TableColumn fx:id="colhemo" prefWidth="80.0" text="Hémoglobine" />
            <TableColumn fx:id="colpla" prefWidth="80.0" text="Plaquettes" />
            <TableColumn fx:id="colch" prefWidth="80.0" text="Cholestérol" />
         </columns>
      </TableView>

      <!-- Boutons -->
      <HBox alignment="CENTER" layoutX="20.0" layoutY="420.0" prefWidth="760.0" spacing="20.0">
         <Button fx:id="boutonAjou" mnemonicParsing="false" onAction="#ajouterAnaSanguine" style="-fx-font-size: 14px; -fx-background-color: #336791;" text="Ajouter" textFill="WHITE" />
         <Button fx:id="boutonSupp" mnemonicParsing="false" onAction="#SuppAnaSanguine" style="-fx-font-size: 14px; -fx-background-color: #336791;" text="Supprimer" textFill="WHITE" />
      </HBox>
      <Button fx:id="back" mnemonicParsing="false" onAction="#handleback" text="⬅" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
   </children>
</AnchorPane>
