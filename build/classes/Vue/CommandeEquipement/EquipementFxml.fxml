<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="424.0" prefWidth="503.0" style="-fx-background-color: #E0E0E0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CommandeEquipement.EquipementFxmlController">
    <children>
        <!-- Titre -->
        <Label layoutX="132.0" layoutY="14.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gestion des Équipements" textFill="#426099" />

        <!-- Champs pour l'équipement -->
        <Label layoutX="20" layoutY="60" text="Nom:" />
        <TextField fx:id="nomField" layoutX="80" layoutY="55" prefHeight="26.0" prefWidth="175.0" />

        <Label layoutX="20" layoutY="100" text="Marque:" />
        <TextField fx:id="marqueField" layoutX="80" layoutY="95" prefHeight="26.0" prefWidth="175.0" />

        <Label layoutX="20" layoutY="140" text="Numéro de Série:" />
        <TextField fx:id="numSerieField" layoutX="140" layoutY="135" prefHeight="26.0" prefWidth="175.0" />

        <Label layoutX="20" layoutY="180" text="Date d'Achat:" />
        <DatePicker fx:id="dateAchatField" layoutX="140" layoutY="175" />

        <Label layoutX="20" layoutY="220" text="Type d'Équipement:" />
       <ComboBox fx:id="etatCombo" layoutX="140" layoutY="215" onAction="#updateEquipementType" prefHeight="26.0" prefWidth="175.0" />


        <!-- Champs dynamiques -->
        <Label fx:id="temperatureLabel" layoutX="20" layoutY="260" text="Température de Stockage (Biologique):" visible="false" />
        <TextField fx:id="temperatureField" layoutX="250" layoutY="255" visible="false" />

        <Label fx:id="precisionLabel" layoutX="20" layoutY="300" text="Niveau de Précision (Physique):" visible="false" />
        <TextField fx:id="precisionField" layoutX="250" layoutY="295" visible="false" />

        <!-- Boutons -->
        
        <Button layoutX="20" layoutY="350" onAction="#afficherDetails" prefHeight="26.0" prefWidth="206.0" style="-fx-background-color: #336791; -fx-text-fill: white;" text="Afficher Détails" />
        <Button layoutX="265.0" layoutY="350.0" onAction="#ajouterEquipement" prefHeight="26.0" prefWidth="206.0" style="-fx-background-color: #336791; -fx-text-fill: white;" text="Ajouter Équipement" />
      <Button fx:id="back" mnemonicParsing="false" onAction="#handleback" text="⬅" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
    </children>
</AnchorPane>
